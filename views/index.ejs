<!DOCTYPE html>
<html>

<head>
  <title>Love you babe</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>
  <div class="container">
    <div class="card-panel teal lighten-5 center-align">
      <div class="row">
        <h4>Â¿Como te sientes ahora?</h4>
      </div>
      <div class="row">
        <p class="range-field">
          <input type="range" id="nivel" min="0" max="10" />
        </p>
        <label for="nivel">Usa la barrita para escoger como te sientes ahora</label>
      </div>
      <div class="row">
        <span class="btn waves-effect waves-light" id="enviar">Test</span>
      </div>
    </div>
    <div class="card-panel teal lighten-5">
      <canvas id="myChart" width="400" height="400"></canvas>
    </div>
  </div>

  <script>
    // Init Materialize
    var elems = document.querySelectorAll("input[type=range]");
    M.Range.init(elems);

    // Fill canvas
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Red\nHi', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
          label: 'Nivel',
          data: [8, null, 3, 5, 7, 6],
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            }
          }]
        }
      }
    });

    // Events
    $('#enviar').on('click', function (e) {
      const now = new Date();
      const utcTimestamp = new Date(now.getTime() + now.getTimezoneOffset() * 60000).getTime();
      const nivel = parseInt($('#nivel').val());
      $.ajax({
        url: '/api',
        type: 'POST',
        data: {
          nivel: nivel,
          time: utcTimestamp
        }
      });
    });
  </script>
</body>

</html>